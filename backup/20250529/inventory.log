const { SlashCommandBuilder } = require('discord.js');
const { getUserFile } = require('../../utils/user');

module.exports = {
  data: new SlashCommandBuilder()
    .setName('inventory')
    .setDescription('Zeigt dein Herzinventar'),
  category: 'heart-game',

  async execute(interaction) {
    const { data } = getUserFile(interaction.user.id);
    const inventory = data.inventory;

    const display = [
      `❤️ Common: ${inventory.Common}`,
      `💖 Rare: ${inventory.Rare}`,
      `💘 Epic: ${inventory.Epic}`,
      `💎 Legendary: ${inventory.Legendary}`
    ];

    await interaction.reply({
      content: `🎒 **Dein Herz-Inventar:**\n\n${display.join('\n')}`,
      flags: 1 << 6
    });
  }
};
